<div class="row">
	<div class="panel panel-default" id="forms">

		<div class="panel-heading">
			<h3 class="panel-title">
				<a data-toggle="collapse" data-parent="#accordion" href="#collapseForm">
					Add a new <%= sport_alias(@sport) %> team
				</a>
			</h3>
		</div>

		<div id="collapseForm" class="panel-collapse collapse">
			<div class="panel-body">
				<%= form_for(@team, url: "#{@sport.underscore}", html: {role: "form"}) do |form| %>
					<div class="form-group">
						<%= form.label "Location" %>
						<%= form.text_field :city, class: "form-control", placeholder: "ex: Denver or Arizona" %>
					</div>
					<div class="form-group">
						<%= form.label :name %>
						<%= form.text_field :name, class: "form-control",  placeholder: "ex: Broncos" %>
					</div>
					<div class="form-group">
						<%= form.label :abbreviation %>
						<%= form.text_field :abbreviation, class: "form-control",  placeholder: "ex: DEN" %>
					</div>
					<%= form.submit "Add Team", class: "btn btn-success" %>
				<% end %>
			</div>
		</div>

	</div>
</div>